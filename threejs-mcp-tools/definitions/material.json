    {
      "name": "three_create_basic_material",
      "description": "创建一个基础材质（不受光照影响）。Create a basic material (not affected by lights).",
      "inputSchema": {
        "type": "object",
        "properties": {
          "color": {
            "type": "string",
            "description": "材质颜色（十六进制格式，如'#ff0000'）。Material color in hex format (e.g., '#ff0000').",
            "default": "#ffffff"
          },
          "opacity": {
            "type": "number",
            "description": "材质不透明度（0-1）。Material opacity (0-1).",
            "default": 1,
            "minimum": 0,
            "maximum": 1
          },
          "transparent": {
            "type": "boolean",
            "description": "是否透明。Whether the material is transparent.",
            "default": false
          },
          "side": {
            "type": "string",
            "enum": ["front", "back", "double"],
            "description": "渲染面：'front'（正面）、'back'（背面）、'double'（双面）。Render side: 'front', 'back', or 'double'.",
            "default": "front"
          },
          "wireframe": {
            "type": "boolean",
            "description": "是否显示为线框。Whether to render as wireframe.",
            "default": false
          }
        },
        "required": []
      }
