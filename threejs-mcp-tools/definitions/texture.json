{
  "category": "texture",
  "name": "纹理工具",
  "description": "Texture Tools",
  "tools": [
    {
      "name": "three_load_texture",
      "description": "从URL加载纹理。Load a texture from a URL.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "纹理图片的URL。URL of the texture image."
          },
          "wrapS": {
            "type": "string",
            "enum": ["repeat", "clamp", "mirror"],
            "description": "S轴包裹模式：'repeat'（重复）、'clamp'（夹紧）、'mirror'（镜像）。S-axis wrap mode: 'repeat', 'clamp', or 'mirror'.",
            "default": "clamp"
          },
          "wrapT": {
            "type": "string",
            "enum": ["repeat", "clamp", "mirror"],
            "description": "T轴包裹模式。T-axis wrap mode.",
            "default": "clamp"
          },
          "magFilter": {
            "type": "string",
            "enum": ["nearest", "linear"],
            "description": "放大过滤：'nearest'（最近邻）、'linear'（线性）。Magnification filter: 'nearest' or 'linear'.",
            "default": "linear"
          },
          "minFilter": {
            "type": "string",
            "enum": ["nearest", "linear", "nearestMipmapNearest", "nearestMipmapLinear", "linearMipmapNearest", "linearMipmapLinear"],
            "description": "缩小过滤。Minification filter.",
            "default": "linearMipmapLinear"
          }
        },
        "required": ["url"]
      }
    },
    {
      "name": "three_create_data_texture",
      "description": "从数据创建纹理（用于程序化生成纹理）。Create a texture from data (for programmatic texture generation).",
      "inputSchema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "description": "纹理数据数组（RGBA格式，每个像素4个值）。Texture data array (RGBA format, 4 values per pixel).",
            "items": {
              "type": "number",
              "minimum": 0,
              "maximum": 255
            }
          },
          "width": {
            "type": "number",
            "description": "纹理宽度（像素）。Texture width in pixels."
          },
          "height": {
            "type": "number",
            "description": "纹理高度（像素）。Texture height in pixels."
          },
          "format": {
            "type": "string",
            "enum": ["rgba", "rgb", "alpha", "red", "rg"],
            "description": "纹理格式。Texture format.",
            "default": "rgba"
          }
        },
        "required": ["data", "width", "height"]
      }
    }
  ]
}
